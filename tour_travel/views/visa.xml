<odoo>
	<data>
		<record id="tour_travel.visa_form_view" model="ir.ui.view">
            <field name="name">visa.form</field>
            <field name="model">visa</field>
            <field name="arch" type="xml">
            	<form string="Visa">
					<header>
						<button name="action_expire" string="Force to expire" type="object" states="available" class="oe_highlight" groups="tour_travel.group_tour_travel_manager"/>
						<field name="state" readonly="1" statusbar_visible="available, expire" widget="statusbar"/>
					</header>
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="issue_date"/>
								<field name="expiry_date"/>
							</group>
							<group>
								<field name="country_id"/>
								<field name="type_id"/>
								<field name="partner_id" context="{'search_default_customer':1,'default_customer':1,'search_default_is_company':0,'default_is_company':0}"/>
								<field name="passport_id" domain="['&amp;',('partner_id','=',partner_id),('state','=','available')]"/>
							</group>							
						</group>
						<separator string="Image"/>
						<field name="visa_img" img_width="100%" img_height="auto" width="100%" widget="image"/>
					</sheet>
				</form>
            </field>
          </record>
          
          
         <record id="tour_travel.visa_action" model="ir.actions.act_window">
            <field name="name">Visa</field>
            <field name="res_model">visa</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain"></field>
            <field name="context">{}</field>
        </record>
         
         
         
         
         
         
         
            
	</data>
</odoo>